        {
            "name": "Debug GnotePad (Debug, Windows)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/win-debug/GnotePad.exe",
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${env:VCPKG_ROOT}\\installed\\x64-windows\\debug\\bin;${env:VCPKG_ROOT}\\installed\\x64-windows\\bin;${env:PATH}",
                "QT_PLUGIN_PATH": "${env:VCPKG_ROOT}\\installed\\x64-windows\\debug\\Qt6\\plugins;${env:VCPKG_ROOT}\\installed\\x64-windows\\Qt6\\plugins",
                "QT_QPA_PLATFORM_PLUGIN_PATH": "${env:VCPKG_ROOT}\\installed\\x64-windows\\debug\\Qt6\\plugins\\platforms;${env:VCPKG_ROOT}\\installed\\x64-windows\\Qt6\\plugins\\platforms",
                "QT_DEBUG_PLUGINS": "1",
                "QT_LOGGING_RULES": "qt.*.debug=false"
            },
            "preLaunchTask": "Build Debug (Windows)",
            "terminal": "integrated",
            "stdio": null,
            "presentation": {
                "group": "run-windows",
                "order": 1
