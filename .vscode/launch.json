{
    "version": "0.2.0",
    "configurations": [
        // Linux launchers
        {
            "name": "Debug GnotePad (Debug, Linux)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/GnotePad",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": ""
