Checks: >
  bugprone-*,
  clang-analyzer-*,
  cppcoreguidelines-*,
  misc-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  # Stuff you explicitly don't want:
  -bugprone-easily-swappable-parameters,
  -modernize-use-trailing-return-type,
  -readability-identifier-naming,
  -readability-identifier-length,
  -readability-magic-numbers,
  -readability-implicit-bool-conversion,
  -bugprone-easily-swappable-parameters,
  -portability-avoid-pragma-once
  # cppcoreguidelines bits that are often noisy with Qt-ish / real-world code:
  #-cppcoreguidelines-avoid-magic-numbers,
  #-cppcoreguidelines-owning-memory,
  #-cppcoreguidelines-pro-type-reinterpret-cast

WarningsAsErrors: ''
SystemHeaders: false

# Only report warnings for headers directly under src/ or tests/ (not in build/).
# Matches paths like /path/to/GnotePad/src/... but not /path/to/GnotePad/build/.../src/...
HeaderFilterRegex: '^(?!.*(/|^)(build|_deps|vcpkg|Qt6|llvm)/).*(/|^)(src|tests)/.*\.(h|hpp|hh|hxx|inl|ipp)$'

FormatStyle: file

# Ignore external libs in include-cleaner
CheckOptions:
  - key: misc-include-cleaner.IgnoreHeaders
    value: >
      (.*/Qt6/.*|.*/qt6/.*|.*/QtCore/.*|.*/QtGui/.*|
       .*/QtWidgets/.*|.*/qsharedpointer_impl\.h|
       .*/spdlog/.*|.*/vcpkg/.*)

